{% extends 'base.html.twig' %}

{% block title %}city index{% endblock %}

{% block body %}

<div class="page-content">
    {% include 'city/_filter.html.twig' with {form: form} only %}

    <h3>RÃ©sultat</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Code postal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for city in citys %}
            <tr>
                <td>{{ city.name }}</td>
                <td>{{ city.postalCode }}</td>
                <td>
