                    </a>
                    <a href="{{ path('city_delete', {'id': city.id}) }}"> <button class="tbl-btn">Supprimer</button>
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
            {% endfor %}
            <tr>
                {{ form_start(form_add) }}
                <td>{{ form_row(form_add.name) }}</td>
                <td>{{ form_row(form_add.postalCode) }}</td>
                <td><button type="submit" class="btn btn-primary"> Ajouter</button></td>
                {{ form_end(form_add) }}
            </tr>
        </tbody>
    </table>
</div>

{% endblock %}