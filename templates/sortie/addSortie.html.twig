{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="d-flex collapse" id="navbarNav">
                <div class="navbar-nav">
                    <a class="nav-link {{ app.request.get('_route') == 'home' ? 'active' }}" aria-current="page"
                       href="{{path('app_login')}}">Log in</a>
                    <a class="nav-link {{ app.request.get('_route') == 'home' ? 'active' }}" aria-current="page"
                       href="{{path('main')}}">Retour</a>
                </div>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <h1>Cr√©er une sortie !</h1>
    <div name="sortie-form">
        {{ form_start(sortieForm) }}
        {{ form_widget(sortieForm) }}
        <button type="submit" class="btn btn-successe"> Valider {#<i class="fa fa-plus">#}</i></button>
        {{ form_end(sortieForm) }}
    </div>
    <div id="add-place-form">
        <button onclick="unhidePlaceForm(); hideButton();"> ajouter un lieu </button>
    </div>
    <div id="place-form" style="display: none" >
        <button onclick="hidePlaceForm(); unhideButton();"> Annuler </button>
        {{ form_start(placeForm) }}
        {{ form_widget(placeForm) }}
        <button type="submit" class="btn btn-successe" onclick="unhideButton() ; hidePlaceForm()"> Ajouter Lieu {#<i class="fa fa-plus">#}</i></button>
        {{ form_end(placeForm) }}
    </div>

    <script>
        function unhidePlaceForm(){
            var div = document.getElementById("place-form");
            div.style.display = 'block';
        }
    </script>

    <script>
        function hidePlaceForm(){
            var div = document.getElementById("place-form");
            div.style.display = 'none';
        }
    </script>

    <script>
        function hideButton(){
            var div = document.getElementById("add-place-form");
            div.style.display = 'none';
        }
    </script>

    <script>
        function unhideButton(){
            var div = document.getElementById("add-place-form");
            div.style.display = 'inline';
        }
    </script>
{% endblock %}

